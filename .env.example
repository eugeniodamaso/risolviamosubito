# RisolviAmoSubito Environment Configuration

# Application
APP_NAME=RisolviAmoSubito
APP_URL=https://risolviamosubito.it
APP_ENV=production
APP_DEBUG=false
APP_SECRET=your-very-secret-key-here-change-this-in-production

# Database
DB_HOST=localhost
DB_NAME=risolviamosubito
DB_USER=risolviamosubito_user
DB_PASS=your-secure-database-password
DB_PORT=3306
DB_CHARSET=utf8mb4

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email Configuration
MAIL_HOST=smtp.your-provider.com
MAIL_PORT=587
MAIL_USERNAME=noreply@risolviamosubito.it
MAIL_PASSWORD=your-email-password
MAIL_FROM_ADDRESS=noreply@risolviamosubito.it
MAIL_FROM_NAME=RisolviAmoSubito

# Security
SESSION_LIFETIME=604800
CSRF_TOKEN_LIFETIME=3600

# Features
ENABLE_ANALYTICS=true
ENABLE_MARKETING_COOKIES=true
ENABLE_DEBUG_TOOLBAR=false

# AI Scoring
AI_SCORE_MIN_APPROVAL=7.0
AI_SCORE_MANUAL_REVIEW=5.0

# Upload Settings
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,pdf